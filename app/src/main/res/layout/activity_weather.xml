<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/bg_1"
    tool:context=".view.activity.WeatherActivity">


    <FrameLayout
        android:id="@+id/activityWeatherFragmentContainer"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/activityWeatherBottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_bg"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        app:menu="@menu/weather_activity"
        android:backgroundTint="@color/transparent"
        app:itemIconSize="30dp"
        app:backgroundTint="@color/transparent"
        app:itemTextColor="@color/item_selector"
        app:itemBackground="@color/transparent"
        app:labelVisibilityMode="unlabeled"
        />

</LinearLayout>
